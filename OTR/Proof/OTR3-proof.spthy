  */

restriction onekeypername:
  "∀ A #A.1 #j.
    ((Register( A ) @ #A.1) ∧ (Register( A ) @ #j)) ⇒ (#A.1 = #j)"
  // safety formula

restriction equality:
  "∀ k1 k2 #i. (Equal( k1, k2 ) @ #i) ⇒ (k1 = k2)"
  // safety formula

restriction unique:
  "∀ id1 id2 key #i #j.
    ((Unique( id1, key ) @ #i) ∧ (Unique( id2, key ) @ #j)) ⇒
    (id1 = id2)"
  // safety formula

lemma executability:
  exists-trace
  "∃ A B K #i #j.
    (((Secret( A, K ) @ #i) ∧ (Secret( B, K ) @ #j)) ∧ (¬(A = B))) ∧
    (¬(∃ B.1 #k. Reveal( B.1 ) @ #k))"
/*
guarded formula characterizing all satisfying traces:
"∃ A B K #i #j.
  (Secret( A, K ) @ #i) ∧ (Secret( B, K ) @ #j)
 ∧
  (¬(A = B)) ∧ (∀ B.1 #k. (Reveal( B.1 ) @ #k) ⇒ ⊥)"
*/
simplify
solve( Secret( A, K ) @ #i )
  case A_2_receive
  solve( St_A_2( $A, ~id, $B, skA, pk(skB), ~x ) ▶₀ #i )
    case A_1_Send
    solve( Secret( B.1, h(z) ) @ #j )
      case B_2_Send
      solve( St_B_2( $B.1, ~id.1, $A.1, skB, pkA, X ) ▶₀ #j )
        case B_1_receive
        solve( !KU( sign(<'2', Y, $A>, ~skA.1) ) @ #vk.3 )
          case B_2_Send
          solve( splitEqs(1) )
            case split_case_1
            solve( !KU( sign(<'1', 'g'^~x, $B>, ~skA) ) @ #vk.8 )
              case A_1_Send
              solve( !KU( pk(~skA.1) ) @ #vk.5 )
                case B_2_Send
                solve( !KU( pk(~skA) ) @ #vk.9 )
                  case A_1_Send
                  solve( !KU( 'g'^~y ) @ #vk.8 )
                    case B_2_Send
                    solve( !KU( 'g'^~x ) @ #vk.9 )
                      case A_1_Send
                      SOLVED // trace found
                    qed
                  qed
                qed
              qed
            qed
          qed
        qed
      qed
    qed
  qed
qed

lemma noninjectiveagreementINITIATOR:
  all-traces
  "∀ a b t #i.
    (Commit( a, b, <'I', 'R', t> ) @ #i) ⇒
    ((∃ #j. Running( b, a, <'I', 'R', t> ) @ #j) ∨
     (∃ X #r. (Reveal( X ) @ #r) ∧ (Honest( X ) @ #i)))"
/*
guarded formula characterizing all counter-examples:
"∃ a b t #i.
  (Commit( a, b, <'I', 'R', t> ) @ #i)
 ∧
  (∀ #j. (Running( b, a, <'I', 'R', t> ) @ #j) ⇒ ⊥) ∧
  (∀ X #r. (Reveal( X ) @ #r) ∧ (Honest( X ) @ #i) ⇒ ⊥)"
*/
simplify
solve( St_A_2( $A, ~id, $B, skA, pk(skB), ~x ) ▶₀ #i )
  case A_1_Send
  solve( !KU( sign(<'2', Y, $A>, ~skA.1) ) @ #vk.3 )
    case B_2_Send
    solve( !KU( sign(<'1', X, $B>, ~skA) ) @ #vk.8 )
      case A_1_Send
      by contradiction /* from formulas */
    next
      case c_sign
      solve( !KU( ~skA ) @ #vk.12 )
        case Reveal_ltk
        by contradiction /* from formulas */
      qed
    qed
  next
    case c_sign
    solve( !KU( ~skA.1 ) @ #vk.7 )
      case Reveal_ltk
      by contradiction /* from formulas */
    qed
  qed
qed

lemma injectiveagreementINITIATOR:
  all-traces
  "∀ a b t #i.
    (Commit( a, b, <'I', 'R', t> ) @ #i) ⇒
    ((∃ #j.
       ((Running( b, a, <'I', 'R', t> ) @ #j) ∧ (#j < #i)) ∧
       (¬(∃ a2 b2 #i2.
           (Commit( a2, b2, <'I', 'R', t> ) @ #i2) ∧ (¬(#i2 = #i))))) ∨
     (∃ X #r. (Reveal( X ) @ #r) ∧ (Honest( X ) @ #i)))"
/*
guarded formula characterizing all counter-examples:
"∃ a b t #i.
  (Commit( a, b, <'I', 'R', t> ) @ #i)
 ∧
  (∀ #j.
    (Running( b, a, <'I', 'R', t> ) @ #j)
   ⇒
    ((¬(#j < #i)) ∨
     (∃ a2 b2 #i2.
       (Commit( a2, b2, <'I', 'R', t> ) @ #i2) ∧ ¬(#i2 = #i)))) ∧
  (∀ X #r. (Reveal( X ) @ #r) ∧ (Honest( X ) @ #i) ⇒ ⊥)"
*/
simplify
solve( St_A_2( $A, ~id, $B, skA, pk(skB), ~x ) ▶₀ #i )
  case A_1_Send
  solve( !KU( sign(<'2', Y, $A>, ~skA.1) ) @ #vk.3 )
    case B_2_Send
    solve( !KU( sign(<'1', X, $B>, ~skA) ) @ #vk.8 )
      case A_1_Send
      solve( (#i2 < #i)  ∥ (#i < #i2) )
        case case_1
        solve( St_A_2( $A.1, ~id.1, $B.1, skA.2, pk(skB), ~x.1 ) ▶₀ #i2 )
          case A_1_Send
          solve( splitEqs(2) )
            case split_case_1
            by contradiction /* cyclic */
          next
            case split_case_2
            solve( !KU( sign(<'2', 'g'^(~x*~y*inv(~x.1)), $A.1>, ~skA.3)
                   ) @ #vk.13 )
              case c_sign
              solve( !KU( ~skA.3 ) @ #vk.17 )
                case Reveal_ltk
                solve( !KU( 'g'^(~x*~y*inv(~x.1)) ) @ #vk.14 )
                  case A_1_Send
                  by solve( !KU( ~y ) @ #vk.21 )
                next
                  case B_2_Send
                  by solve( !KU( ~x ) @ #vk.21 )
                next
                  case c_exp
                  by solve( !KU( ~x ) @ #vk.22 )
                qed
              qed
            qed
          qed
        qed
      next
        case case_2
        solve( St_A_2( $A.1, ~id.1, $B.1, skA.2, pk(skB), ~x.1 ) ▶₀ #i2 )
          case A_1_Send
          solve( splitEqs(2) )
            case split_case_1
            by contradiction /* cyclic */
          next
            case split_case_2
            solve( !KU( sign(<'2', 'g'^(~x*~y*inv(~x.1)), $A.1>, ~skA.3)
                   ) @ #vk.13 )
              case c_sign
              solve( !KU( ~skA.3 ) @ #vk.17 )
                case Reveal_ltk
                solve( !KU( 'g'^(~x*~y*inv(~x.1)) ) @ #vk.14 )
                  case A_1_Send
                  by solve( !KU( ~y ) @ #vk.21 )
                next
                  case B_2_Send
                  by solve( !KU( ~x ) @ #vk.21 )
                next
                  case c_exp
                  by solve( !KU( ~x ) @ #vk.22 )
                qed
              qed
            qed
          qed
        qed
      qed
    next
      case c_sign
      solve( !KU( ~skA ) @ #vk.12 )
        case Reveal_ltk
        by contradiction /* from formulas */
      qed
    qed
  next
    case c_sign
    solve( !KU( ~skA.1 ) @ #vk.7 )
      case Reveal_ltk
      by contradiction /* from formulas */
    qed
  qed
qed

