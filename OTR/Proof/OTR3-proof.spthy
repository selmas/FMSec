   In( <Y, sign(<'2', Y, $A>, skB), pkB> )
   ]
  --[
  Receive( $A, <Y, sign(<'2', Y, $A>, skB), pkB> ),
  Secret( $A, h(Y^~x) ), Unique( ~id, skA ), Honest( $A ),
  Honest( $B ),
  Equal( verify(sign(<'2', Y, $A>, skB), <'2', Y, $A>, pkB), true ),
  Commit( $A, $B, <'I', 'R', Y^~x> )
  ]->
   [ St_A_3( $A, ~id, $B, skA, pkB, h(Y^~x) ) ]

