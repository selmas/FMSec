        z.1   = verify(sign(<'2', x.77^x.78, $A.40>, skB.47),
                       <'2', x.77^x.78, $A.40>, pkB.45)
    
     4. $A    = $A.41
        ~x    = ~x.44
        Y     = x.79^inv((~x.44*x.80))
        pkB   = pkB.46
        skB   = skB.48
        z     = x.79^inv(x.80)
        z.1   = verify(sign(<'2', x.79^inv((~x.44*x.80)), $A.41>, skB.48),
